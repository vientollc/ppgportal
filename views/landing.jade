extends layout

block content
    .body-content
        .page-header
            h1
                span#username
        .resp
        .row
            .col-lg-4
                h4 Manage Meters
                img(src="images/Database.png")
            .col-lg-4
                h4 Receipts
                img(src="images/Briefcase.png")
            .col-lg-4
                h4 Purchases
                img(src="images/Credit%20Cards.png")
    //Meter Modal Window 
    div(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")#meterModal.modal.fade
        .modal-dialog
            .modal-content
                .modal-header
                    button(type="button", data-dismiss="modal", aria-hidden="true").close &times;
                    h4 Add Meter
                .modal-body
                    .form-group
                        input(type="text", placeholder="meter/account number")#addMeterNumber.form-control
                        select
                .modal-footer
                    button(type="button")#addMeterSubmit.btn.btn-success Pay